- content_for :title, _("Welcome to Getup Cloud")

%div.content
  %header.getup
    .wrap
      %h1.getup-sprite.logo Getup

  %section.auth
    %div.signin{ :id => 'signin' }
      %h2= _("Welcome to Getup Cloud")
      %form{:action => auth_path, :id => 'form-authentication', :method => 'post'}
        %fieldset
          = token_tag(nil)
        %fieldset
          = text_field_tag 'login', '', :placeholder => _("Email"), :required => ''
        %fieldset
          = password_field_tag 'password', '', :placeholder => _("Password"), :required => ''
        .pull-left
          %img{:src => image_path('astro-left.png')}
        .pull-right
          %fieldset
            %button.getup-sprite Sign In
          %fieldset
            = link_to _("Forgot your password?"), password_reset_path, :id => 'forgot'

    = flashes

= javascript_include_tag 'console'
